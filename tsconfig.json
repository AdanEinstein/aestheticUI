{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    /* Bundler mode */
    "moduleResolution": "Node",
    "allowImportingTsExtensions": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    "skipLibCheck": true,
     "esModuleInterop": true ,
     "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@adaneinstein/aesthetic-ui": ["src/index.ts"]
    },
    "typeRoots": [
      "src/component/index.ts",
      "src/@types/sitemap.d.ts"
    ]
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "package.json"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}